<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <ImageView
        android:id="@+id/imagen_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/margen"
        android:src="@drawable/ic_launcher" />

    <TextView
        android:id="@+id/titulo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/margen"
        android:layout_marginRight="@dimen/margen"
        android:layout_marginTop="@dimen/margen"
        android:layout_toRightOf="@+id/imagen_item"
        android:text="Titulo"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/negro1" />

    <TextView
        android:id="@+id/subtitulo_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/titulo_item"
        android:layout_marginBottom="@dimen/margen"
        android:layout_marginRight="@dimen/margen"
        android:layout_toRightOf="@+id/imagen_item"
        android:paddingBottom="@dimen/margen"
        android:text="Subtitulo"
        android:textColor="@color/negro2" />

</RelativeLayout>